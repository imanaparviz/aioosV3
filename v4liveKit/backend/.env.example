# ============================================
# AIOOS BACKEND - Environment Variables
# ============================================

# ------------------
# LIVEKIT CONNECTION (REQUIRED!)
# ------------------
# Get free tier: https://cloud.livekit.io
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# ------------------
# AI SERVICES (REQUIRED!)
# ------------------

# OpenAI (for LLM - GPT-4o-mini recommended)
OPENAI_API_KEY=your_openai_api_key_here

# Deepgram (for Speech-to-Text - fast & accurate)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Azure Speech (for TTS/STT - BEST VALUE!)
# Location: North Europe (or your region)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=northeurope

# ------------------
# DATABASE (OPTIONAL)
# ------------------

# Supabase (for storing agents, calls, analytics)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# ------------------
# AGENT DEFAULTS
# ------------------

# Default agent configuration
DEFAULT_TTS_PROVIDER=azure
DEFAULT_TTS_VOICE=en-US-JennyNeural
DEFAULT_STT_PROVIDER=azure
DEFAULT_STT_LANGUAGE=en-US
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_LLM_TEMPERATURE=0.7

# ------------------
# SERVER CONFIG
# ------------------

# Backend server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true

# Logging
LOG_LEVEL=INFO
